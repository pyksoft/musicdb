<div class="container chattitle">
  <h5>Genre:</h5>
  <h4><%= @chat_room.title %></h4>
</div>
<div class="container row">
  <div class="col s3">
    <strong>Chatrooms:</strong>
    <div class="collection">
      <% @chat_rooms.each do |room| %>
        <a href="#!" class="collection-item"><%= room.title %></a>
      <% end %>
    </div>
  </div>
  <div class="col s9">
    <div class="chatbox">
      <div id="messages" data-chat-room-id="<%= @chat_room.id %>">
        <%= render @chat_room.messages %>
      </div>
    </div>
    <div class="chatinput">
      <%= form_for @message, url: '#', id: 'formSubmit' do |f| %>
        <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
        <div class="form-group input-container row">
          <div class="col s12">
            <%= f.text_field :body, class: 'form-control', placeholder: 'Type your message...' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
